# Environment variables for Titan POS development
# Copy this file to .env and modify as needed

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL (Cloud DB - via Docker)
DATABASE_URL=postgres://titan:titan_dev_password@localhost:5432/titan_pos

# SQLite (Local DB - for Tauri app)
SQLITE_PATH=./data/titan_local.db

# =============================================================================
# REDIS
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-DO-NOT-USE-IN-PRODUCTION
JWT_ACCESS_EXPIRY_SECONDS=900
JWT_REFRESH_EXPIRY_SECONDS=604800

# =============================================================================
# LOGGING
# =============================================================================

# Rust logging level
# Options: trace, debug, info, warn, error
RUST_LOG=debug,sqlx=warn,hyper=warn

# Log format: pretty (dev) or json (prod)
LOG_FORMAT=pretty

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable cloud sync (disable for pure offline testing)
ENABLE_SYNC=false

# Enable telemetry/metrics
ENABLE_TELEMETRY=false

# Enable mock payment processing
ENABLE_MOCK_PAYMENTS=true

# =============================================================================
# TENANT CONFIGURATION (v0.1 - Single Tenant)
# =============================================================================

# Default tenant ID (UUID v4)
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001

# Default device ID
DEFAULT_DEVICE_ID=DEV001

# Default user ID (for v0.1 - no auth)
DEFAULT_USER_ID=00000000-0000-0000-0000-000000000001

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Currency (ISO 4217)
CURRENCY=USD

# Tax mode: exclusive (US) or inclusive (EU)
TAX_MODE=exclusive

# Default tax rate in basis points (825 = 8.25%)
DEFAULT_TAX_RATE_BPS=825

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Tauri development
TAURI_DEBUG=1

# Vite development server port
VITE_PORT=5173
